<h1> Book create</h1>
    <%= form_for(@book) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Book's name", autofocus: true, class: 'form-control' %>
      </div>
   
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: "Book's description", autofocus: true, class: 'form-control' %>
      </div>
   
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    <% end %>